# ===========================================
# SECURITY NOTICE: 
# - Use strong passwords (16+ chars, mixed case, numbers, symbols)
# - Never commit .env file to version control
# - Rotate passwords regularly
# - Use different passwords for each service
# ===========================================

# Postgres Config
POSTGRES_DB=zinixgames
POSTGRES_PORT=5432
POSTGRES_USER=zinix_admin
# Example: MyStr0ng!P@ssw0rd2024#PG
POSTGRES_PASS=your_very_secure_postgres_password_min_16_chars

# Redis Config  
REDIS_PORT=6379
REDIS_USER=zinix_admin
# Example: R3d!s$ecur3P@ss2024#
REDIS_PASS=your_very_secure_redis_password_min_16_chars

# RabbitMQ Configuration
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_USER=zinix_admin
# Example: R@bb!tMQ$tr0ng2024#
RABBITMQ_PASS=your_very_secure_rabbitmq_password_min_16_chars
RABBITMQ_MANAGEMENT_PORT=15672

# Data Storage Path
DATA_PATH=./data

# Network Security - IP Binding
# For development: use 0.0.0.0 to accept connections from any IP
# For production: use specific IP address (e.g., your VPS IP)
BIND_IP=0.0.0.0
